<% include ../partials/header %>
<div>
    <h1 class="text-center">Add new comment to <%= camp.name %></h1>
    <div  style="width:25%; margin: 3rem auto;">
        <form action="/campgrounds/<%= camp._id %>/comments" method="POST">
            <div class="form-group">
                <label for="name">Comment:</label>
                <input id="name" class="form-control" type="text" name="comment[text]" placeholder="Enter Comment">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>