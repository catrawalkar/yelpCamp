<% include ../partials/header %>
<div>
    <h1 class="text-center">Add new campground</h1>
    <div  style="width:25%; margin: 3rem auto;">
        <form action="/campgrounds" method="POST">
            <div class="form-group">
                <label for="name">Camp Ground Name:</label>
                <input id="name" class="form-control" type="text" name="campground[name]" placeholder="Enter campground name">
            </div>
            <div class="form-group">
                <label for="url">Camp Ground url: </label>
                <input id="url" class="form-control" type="text" name="campground[image]" value="https://source.unsplash.com/">
            </div>
            <div class="form-group">
                <label for="desc">Camp Ground Description: </label>
                <input id="desc" class="form-control" type="text" name="campground[description]" placeholder="Enter image Description">
            </div>
            <div class="form-group">
                <button class="btn btn-primary btn-block">Submit!</button>
            </div>
        </form>
        <a href="/campgrounds">Go Back</a>
    </div>
</div>


<% include ../partials/footer %>